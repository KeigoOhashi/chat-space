.SideBar
  .SideBar__Header
    .SideBar__Header__Box
      .side__header__box__name
        = current_user.name
      .side__header__box__menu
        = link_to new_group_path do
          = icon('fa', 'fa fa-edit')
        = link_to edit_user_path(current_user) ,class:"icon" do
          = icon('fa', 'fa fa-cog')

  .SideBar__GroupList
    - current_user.groups.each do |group|
      .SideBar__GroupList__Groups
        = link_to group_messages_path(group) do
          .SideBar__GroupList__Groups-GroupName
            = group.name
          .SideBar__GroupList__Groups-GroupMessage
            = group.show_last_message